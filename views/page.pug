doctype html 
html 
  head 
    meta( charset="utf-8")
    title #{title}
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous")
  body(style="background-color: #c9d1c9;")
    .container
      br
      h1 Send The Email
      br
      form(action="/send-email" method="post") 
        .row 
          .col-md-4
          .form-group.col-md-4
            label(for="to") To: 
            input.form-control(type="email" name="to")
        .row
          .col-md-4
          .form-group.col-md-4
            label(for="subject") Subject: 
            input.form-control(type="text" name="subject")
        .row
          .col-md-4
          .form-group.col-md-4
            label(for="body") Body: 
            textarea(name="body", cols="38", rows="5") 
        .row
          .col-md-4
          .form-group.col-md-4
            button.btn.btn-success(type="submit") Send 
